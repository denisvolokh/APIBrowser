<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  verticalAlign="middle"
		  height="30"
		  gap="0">
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Label;
			
		private var _templateUrl : String;
			
		public function get templateUrl():String
		{
			return _templateUrl;
		}

		public function set templateUrl(value:String):void
		{
			_templateUrl = value;
			
			renderQuery();
		}

		private function renderQuery():void
		{
			this.removeAllElements();
			
			var lbl : Label = new Label;
			lbl.text = _templateUrl;
			addElement(lbl);
			
			var render : ParamItemRenderer = new ParamItemRenderer;
			render.paramName = "ID";
			addElement(render);
		}
			
		]]>
	</fx:Script>
	
</s:HGroup>
