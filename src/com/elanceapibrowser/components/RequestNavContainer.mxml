<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%" height="100%"
		 label="Request">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout paddingTop="20"
						  paddingLeft="20"
						  paddingRight="20"
						  paddingBottom="20"
						  verticalAlign="top"/>
	</s:layout>
	
	<s:VGroup width="100%"
			  paddingLeft="20"
			  paddingRight="20">
		<s:Label text="API Methods" fontSize="16"/>
		<s:ComboBox id="comboAllMethods" 
					width="100%"
					labelField="signature"/>
	</s:VGroup>
	
	<s:VGroup width="100%"
			  paddingLeft="20"
			  paddingRight="20">
		<s:Label text="Description:"/>
		<s:TextArea width="100%" height="100" editable="false"/>
	</s:VGroup>
	
	<s:VGroup width="100%"
			  height="200"
			  paddingLeft="20"
			  paddingRight="20">
		<s:Label text="Parameters:"/>
		
	</s:VGroup>
	
	<s:Button id="buttonSend"/>
	
</s:NavigatorContent>
